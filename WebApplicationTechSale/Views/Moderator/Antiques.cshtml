@using DataAccessLogic.DatabaseModels;
@using DataAccessLogic.HelperServices;

@model AntiquesViewModel

@{
    ViewData["Title"] = "Список антиквариата";
}

@addTagHelper *, WebApplicationTechSale

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 my-lg-2">
    @foreach (Antiques antiques in Model.Antiques)
    {
        <div class="col">
            <div class="card h-100 rounded-0">
                <a><img src="@antiques.PhotoSrc" class="card-img-top list-lot rounded-0" alt="..."></a>
                <div class="card-body">
                    <a id ="namemod" class="auction-link" asp-action="CheckAntiques" asp-controller="Moderator" asp-route-id="@antiques.Id">
                        <h5 class="card-title">@antiques.Name</h5>
                    </a>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Продавец: @antiques.User.UserName</li>
                </ul>
            </div>
        </div>
    }
</div>

@if (Model.Antiques.Count() > 0)
{
    <pagination page-model="@Model.PageViewModel" page-action="Antiques" page-controller="Moderator"></pagination>
}
